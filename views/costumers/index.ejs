<div class="bigButtonDiv">
    <a class="bigButton" href="/costumers/new">Add Costumer</a>
</div>

<div class="searchDiv">
    <h2>Search Costumers</h2>

    <form class="form" action="/costumers" method="GET">
        <div class="searchParametarsDivConteiner">
            <div class="searchParametarsDiv">
                <label>Full Name</label>
                <input type="text" name="fullName" value="<%= searchOptions.fullName %>">
            </div>
        </div>
        <div class="buttonSmallDiv">
            <button class="buttonSmall" type="submit">Search</button>
        </div>
    </form>
</div>

<% costumers.forEach(costumer => { %>
    <div class="carDivConteinerCostumer">
        <div class="infoCostumerDiv">
            <div>Full name: <span class="boldSpan"><%= costumer.fullName %></span></div>
            <div>Email: <span class="boldSpan"><%= costumer.email %></span> </div> 
            <div>Number:  <span class="boldSpan"><%= costumer.phoneNumber %></span></div>
        </div>
        <div class="buttonsDiv">
            <a class="buttonSmall" href="/costumers/<%= costumer.id %>">View</a>
            <a class="buttonSmall" href="/costumers/<%= costumer.id %>/edit">Edit</a>
            <%- include("../partials/deleteForm.ejs",
                    {url: `/costumers/${costumer.id}`}) %> 
        </div>
    </div>
<%}); %> 

