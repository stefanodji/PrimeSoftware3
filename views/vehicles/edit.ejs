<h2>Edit Vehicle</h2>

<form action="/vehicles/<%= vehicle.id  %>?_method=PUT" method="POST">
    <div>
        <label>Vehicle type</label>
        <select name="vehicleType" value="<%= vehicle.vehicleType %>">
            <% if(vehicle.vehicleType === "luxury") {%>
                <option selected label='<%=vehicle.vehicleType%>' value="<%=vehicle.vehicleType%>">
                    <option value="SUV">SUV</option>
                        <option value="economy">economy</option>
                            <option value="cargo">cargo</option>
                                <option value="estate">estate</option>
                <% } else if(vehicle.vehicleType === "SUV") {%> 
                    <option selected label='<%=vehicle.vehicleType%>' value="<%=vehicle.vehicleType%>">
                        <option value="luxury">luxury</option>
                            <option value="economy">economy</option>
                                <option value="cargo">cargo</option>
                                    <option value="estate">estate</option>
                <% } else if(vehicle.vehicleType === "economy") {%> 
                    <option selected label='<%=vehicle.vehicleType%>' value="<%=vehicle.vehicleType%>">
                        <option value="luxury">luxury</option>
                            <option value="SUV">SUV</option>
                                <option value="cargo">cargo</option>
                                    <option value="estate">estate</option>
                <% } else if(vehicle.vehicleType === "cargo") {%> 
                    <option selected label='<%=vehicle.vehicleType%>' value="<%=vehicle.vehicleType%>">
                        <option value="luxury">luxury</option>
                            <option value="SUV">SUV</option>
                                <option value="economy">economy</option>
                                    <option value="estate">estate</option>
                <% } else if(vehicle.vehicleType === "estate") {%> 
                    <option selected label='<%=vehicle.vehicleType%>' value="<%=vehicle.vehicleType%>">
                        <option value="luxury">luxury</option>
                            <option value="SUV">SUV</option>
                                <option value="economy">economy</option>
                                    <option value="cargo">cargo</option>
                    <% } %> 
        </select>

        <div>
            <label>Brand:</label>
            <input type="text" name="brand" value="<%= vehicle.brand %>">
        </div>

        <div>
            <label>Model:</label>
            <input type="text" name="model" value="<%= vehicle.model %>">
        </div>

        <div>
            <label>Picture:</label>
            <input type="file" name="image" class="filepond">
        </div>

        <div>
            <label>Construction Year:</label>
            <input type="number" name="constructionYear" value="<%= vehicle.constructionYear %>">
        </div>

        <label>Fuel type:</label>
        <select name="fuelType" value="<%= vehicle.fuelType %> ">
            <% if(vehicle.fuelType === "petrol") {%>
                <option selected label='<%=vehicle.fuelType%>' value="<%=vehicle.fuelType%>">
                    <option value="diesel">diesel</option>
                        <option value="hybrid">hybrid</option>
                            <option value="electric">electric</option>                                
            <% } else if(vehicle.fuelType === "diesel") {%> 
                <option selected label='<%=vehicle.fuelType%>' value="<%=vehicle.fuelType%>">
                    <option value="petrol">petrol</option>
                        <option value="hybrid">hybrid</option>
                            <option value="electric">electric</option> 
            <% } else if(vehicle.fuelType === "hybrid") {%> 
                <option selected label='<%=vehicle.fuelType%>' value="<%=vehicle.fuelType%>">
                    <option value="petrol">petrol</option>
                        <option value="diesel">diesel</option>
                            <option value="electric">electric</option>
            <% } else if(vehicle.fuelType === "electric") {%> 
                <option selected label='<%=vehicle.fuelType%>' value="<%=vehicle.fuelType%>">
                    <option value="petrol">petrol</option>
                        <option value="diesel">diesel</option>
                            <option value="hybrid">hybrid</option>
                <% } %> 
        </select>

        <div>
            <label>Number of seats:</label>
            <input type="number" name="numberOfSeats" value="<%= vehicle.numberOfSeats %>">
        </div>

        <div>
            <label>Price per day:</label>
            <input type="number" name="pricePerDay" value="<%= vehicle.pricePerDay %>">
        </div>

        <div>
            <label>Count:</label>
            <input type="number" name="count" value="<%= vehicle.count %>">
        </div>
    </div>
    <div>
        <a href="/vehicles/<%= vehicle.id %>">Cancel</a>
        <button type="submit">Update</button>
    </div>
</form>